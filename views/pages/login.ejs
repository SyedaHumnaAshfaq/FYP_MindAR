<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- <link rel="stylesheet" href="style.css" /> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="stylenew.css" />
    <script src="/script.js"></script>
    <script src="/public/scripting.js"></script>
    <script>
        function togglePasswordVisibility() {
         const passwordField = document.getElementById("password");
         const toggleIcon = document.getElementById("togglePasswordIcon");
     
         if (passwordField.type === "password") {
             passwordField.type = "text";
             toggleIcon.classList.remove("fa-eye");
             toggleIcon.classList.add("fa-eye-slash");
         } else {
             passwordField.type = "password";
             toggleIcon.classList.remove("fa-eye-slash");
             toggleIcon.classList.add("fa-eye");
         }
     }
     
     
         </script>
</head>
<body class="login-body">
    
    <div class="login-container">
        <div class="login-left">
            <h2>Welcome to Adorn Ease</h2>
            <div class="login-form">
                <form action="/api/auth/login" method="post" id="loginform" onsubmit="handleLogin(event)">
                    <div class="input-box">
                        <input type="text" name="username" required>
                        <label>Username</label>
                    </div>
                    <div class="input-box">
                        <input type="password" name="password" id="password" required>
                        <label>Password</label>
                        <span class="eye-icon" onclick="togglePasswordVisibility()">
                            <i class="fas fa-eye" id="togglePasswordIcon"></i>
                        </span>
                    </div>
                    <button class="loginbutton" type="submit">Login</button>
                    <!-- <p class="forgot-password">Dont have an account?</p> -->
                    <br>
                    <p class="sign-up"><a href="/SignUp">Dont have an account? Sign Up</a></p>
                </form>
            </div>
        </div>
        <div class="login-right">
            <img src="images/log2.jpeg" alt="Jewelry Image">
        </div>
    </div>
    
</body>
</html>
