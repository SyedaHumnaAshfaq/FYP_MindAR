    <!-- Products Title -->
    <h1 class="products-title">PRODUCTS</h1>

    <!-- Filter and Sort Section -->
    <section class="filter-sort">
        <div class="filter-dropdown">
            <label for="filter">Filter By:</label>
            <select id="filter">
                <option value="all">All</option>
                <option value="eyewear">Eyewear</option>
                <option value="nosepin">Nosepins</option>

                <option value="earing">Earrings</option>
            </select>
        </div>
        <div class="sort-dropdown">
            <label for="sort">Sort By:</label>
            <select id="sort">
                <option value="default">Default</option>
                <option value="price-low-high">Price: Low to High</option>
                <option value="price-high-low">Price: High to Low</option>
                <option value="new-arrivals">New Arrivals</option>
            </select>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products-grid">
        <% products.forEach(product=> { %>
            <%if(product.is_Published == true){%>
            <div class="product-card">
                <img src="<%=product.Product_image_url%>"" alt=" <%=product.Product_name %>">
                <button class="product-btn try-now-btn">Try Now</button>
                <div class="product-info">
                    <h3>
                        <%=product.Product_name%>
                    </h3>
                    <p>$<%=product.Product_price%>
                    </p>
                    <div class="product-actions">
                        <button class="quick-view-btn" data-product-id="<%= product._id %>">Quick View</button>
                        <%if(product.Product_stock == 0){%>
                        <button class="product-btn">Out of Stock</button>
                        <%}else{%>
                        <button class="product-btn add-to-cart-btn add-to-cart" data-product-id="<%= product._id %>"
                            data-product-name="<%= product.Product_name %>"
                            data-product-price="<%= product.Product_price %>">Add to Cart</button>
                        <%}%>
                        <!-- <span class="wishlist-icon">❤️</span> -->
                    </div>
                </div>
            </div>
            <% } %>
            <% }) %>


    </section>


