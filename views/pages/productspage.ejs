          <div class="sidebar-item">
            <a href="#order-history">Order History</a>
          </div>
          <div class="sidebar-item"><a href="#support">Customer Support</a></div>
        </div>
      </header>

    <!-- Slim Image Carousel -->
    <section class="carousel">
        <div class="carousel-slide">
            <img src="images/d1.jpeg" alt="Carousel Image 1">
            <!-- <img src="images/b3.jpg" alt="Carousel Image 2">
            <img src="images/b4.jpg" alt="Carousel Image 3">
            <img src="images/b1.jpg" alt="Carousel Image 1"> -->
            

        </div>
    </section>

    <!-- Products Title -->
    <h1 class="products-title">PRODUCTS</h1>

    <!-- Filter and Sort Section -->
    <section class="filter-sort">
        <div class="filter-dropdown">
            <label for="filter">Filter By:</label>
            <select id="filter">
                <option value="all">All</option>
                <option value="rings">Rings</option>
                <option value="earrings">Earrings</option>
                <option value="necklaces">Necklaces</option>
            </select>
        </div>
        <div class="sort-dropdown">
            <label for="sort">Sort By:</label>
            <select id="sort">
                <option value="default">Default</option>
                <option value="price-low-high">Price: Low to High</option>
                <option value="price-high-low">Price: High to Low</option>
                <option value="new-arrivals">New Arrivals</option>
            </select>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products-grid">
        <div class="product-card">
            <img src="images/sung.png" alt="Product 1">
            <div class="product-info">
                <h3>Gold Necklace</h3>
                <p>$350</p>
                <div class="product-actions">
                    <button class="quick-view">Quick View</button>
                    <button class="add-to-cart">Add to Cart</button>
                    <span class="wishlist-icon">❤️</span>
                </div>
            </div>
        </div>
        <div class="product-card">
            <img src="images/sung2.png" alt="Product 2">
            <div class="product-info">
                <h3>Diamond Earrings</h3>
                <p>$450</p>
                <div class="product-actions">
                    <button class="quick-view">Quick View</button>
                    <button class="add-to-cart">Add to Cart</button>
                    <span class="wishlist-icon">❤️</span>
                </div>
            </div>
        </div>
        <!-- Add more product cards as needed -->
        <div class="product-card">
            <img src="images/e1.png" alt="Product 2">
            <div class="product-info">
                <h3>Diamond Earrings</h3>
                <p>$450</p>
                <div class="product-actions">
                    <button class="quick-view">Quick View</button>
                    <button class="add-to-cart">Add to Cart</button>
                    <span class="wishlist-icon">❤️</span>
                </div>
            </div>
        </div>
        <div class="product-card">
            <img src="images/nosepin.png" alt="Product 2">
            <div class="product-info">
                <h3>Diamond Earrings</h3>
                <p>$450</p>
                <div class="product-actions">
                    <button class="quick-view">Quick View</button>
                    <button class="add-to-cart">Add to Cart</button>
                    <span class="wishlist-icon">❤️</span>
                </div>
            </div>
        </div>
        <div class="product-card">
            <img src="images/nosepin1.png" alt="Product 2">
            <div class="product-info">
                <h3>Diamond Earrings</h3>
                <p>$450</p>
                <div class="product-actions">
                    <button class="quick-view">Quick View</button>
                    <button class="add-to-cart">Add to Cart</button>
                    <span class="wishlist-icon">❤️</span>
                </div>
            </div>
        </div>
    </section>

